global
   log 127.0.0.1 local0 notice
   maxconn 2000
   user haproxy
   group haproxy

defaults
   log global
   mode http
   option httplog
   option dontlognull
   retries 3
   option redispatch
   timeout connect 5000
   timeout client 10000
   timeout server 10000

frontend www-https
    bind 0.0.0.0:80
    bind 0.0.0.0:443 ssl crt-list /etc/haproxy/certs/get-daniel.tech.pem
    http-request redirect scheme https unless { ssl_fc }
    stats uri /haproxy?stats
    option forwardfor
    default_backend www-backend

backend www-backend
    balance roundrobin
    option httpchk HEAD / HTTP/1.1\r\nHost:localhost
    server 338094-web-01 100.25.165.72:80 check
    server 338094-web-02 34.203.29.217:80 check
